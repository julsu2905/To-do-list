            <div class="body-table">
              <div class="todo-list-table">
                <h1>TO DO LIST</h1>
                <div>
                  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#staticBackdrop">
                    Add Task To Project
                  </button>
                </div>

                <!-- Button trigger modal -->


                <!-- Modal -->
                <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1"
                  aria-labelledby="staticBackdropLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Add Task</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body" id="modalbody">
                        <form class="add-task">
                          <div>
                            <label>Name of task</label>
                            <input type="text" class="form-control1" name='taskName' placeholder="Task Name Project">
                            <label>Priority</label>
                            <select class="form-control" id="priority" class="select">
                              <option value="Critical">Critical</option>
                              <option value="High">High</option>
                              <option selected value="Normal">Normal</option>
                              <option value="Low">Low</option>
                            </select>
                          </div>
                          <br>
                          <div class="endDate">
                            <label>Due date</label><br>
                            <input type="date" name='dueDate' id="dt" onchange="mydate1();" hidden />
                            <input type="text" id="ndt" onclick="mydate();" hidden required />
                            <input type="button" Value="End Date" onclick="mydate();" />
                          </div>
                          <br>
                          <div>
                            <label>Assigned Member</label><br>
                            <select id="assignedMember" class="form-control">
                              <option value="0"> Choose a member to assign task</option>
                              <% thisProject.members.forEach((member)=>{ %>
                                <option value="<%= member.id %>">
                                  <%= member.email %>
                                </option>
                                <% }) %>
                            </select>
                          </div>
                          <!-- <button type="button"  onclick="addTask()">Them</button> -->

                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add Task</button>
                      </div>
                      </form>
                    </div>
                  </div>
                </div>


                <div class="Assigned">
                  <h4>Assigned</h4>
                  <div class="dropdown-divider"></div>
                  <% i=0; index=0; %>
                    <% thisProject.projectTasks.forEach((task)=>{ if(task.status == 'assigned') { %>
                      <div class="draggable">
                        <input id="0<%= i++ %>" value="<%= task.id %>" hidden>
                        <p>
                          <%= task.taskName %>
                        </p>
                        <p>
                          <%= task.priority %>
                        </p>
                        <p>
                          <%= task.assignedMember.email %>
                        </p>
                        <p>
                          <%= task.dueDate %>
                        </p>
                        <div class="control">
                          <button type="button" value="<%= task.id %>" class="btn btn-info change" data-toggle="modal" data-col="0" data-index="<%= index++; %>" data-target="#myModalchange"><i class='fas fa-exchange-alt'
                              style='font-size:13px'></i></button>
                          <button type="button" id="btnTrash" class="btn btn-dark trash"><i class='fas fa-trash-alt'
                              style='font-size:13px'></i></button>
                        </div>
                      </div>
                      <% }}) %>
                </div>

                <div class="Working">
                  <h4>Working</h4>
                  <div class="dropdown-divider"></div>
                  <% i=0; index=0; %>
                    <% thisProject.projectTasks.forEach((task)=>{
                      if(task.status == 'working') { %>
                      <div class="draggable">
                        <input id="1<%= i++ %>" value="<%= task.id %>" hidden>
                        <p>
                          <%= task.taskName %>
                        </p>
                        <p>
                          <%= task.priority %>
                        </p>
                        <p>
                          <%= task.assignedMember.email %>
                        </p>
                        <p>
                          <%= task.dueDate %>
                        </p>
                        <div class="control">
                          <button type="button" value="<%= task.id %>" class="btn btn-info change" data-col="1" data-index="<%= index++; %>" data-toggle="modal" data-target="#myModalchange"><i class='fas fa-exchange-alt'
                              style='font-size:13px'></i></button>
                        </div>
                        <% }}) %>
                      </div>
                </div>

                <div class="Pending">
                  <h4>Pending</h4>
                  <div class="dropdown-divider"></div>
                  <% i=0; index=0; %>
                    <% thisProject.projectTasks.forEach((task)=>{
                      if(task.status == 'pending') { %>
                      <div class="draggable">
                        <input id="2<%= i++ %>" value="<%= task.id %>" hidden>
                        <p>
                          <%= task.taskName %>
                        </p>
                        <p>
                          <%= task.priority %>
                        </p>
                        <p>
                          <%= task.assignedMember.email %>
                        </p>
                        <p>
                          <%= task.dueDate %>
                        </p>
                        <div class="control">
                          <button type="button" value="<%= task.id %>" class="btn btn-info change" data-toggle="modal" data-col="2" data-index="<%= index++; %>" data-target="#myModalchange"><i class='fas fa-exchange-alt'
                              style='font-size:13px'></i></button>
                        </div>
                        <% }}) %>
                      </div>
                </div>

                <div class="Done">
                  <h4>Done</h4>
                  <div class="dropdown-divider"></div>
                  <% i=0; index=0 %>
                    <% thisProject.projectTasks.forEach((task)=>{
                      if(task.status == 'done') { %>
                      <div class="draggable">
                        <input id="3<%= i++ %>" value="<%= task.id %>" hidden>
                        <p>
                          <%= task.taskName %>
                        </p>
                        <p>
                          <%= task.priority %>
                        </p>
                        <p>
                          <%= task.assignedMember.email %>
                        </p>
                        <p>
                          <%= task.dueDate %>
                        </p>
                        <div class="control">
                          <button type="button" value="<%= task.id %>" class="btn btn-info change" data-col="3" data-toggle="modal" data-index="<%= index++; %>"
                            data-target="#myModalchange"><i class='fas fa-exchange-alt'
                              style='font-size:13px'></i></button>
                        </div>
                        <% }}) %>
                      </div>
                </div>
              </div>
            </div>
          </div>
          <div id="myModalchange" class="modal fade" role="dialog">
            <div class="modal-dialog">

              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">
                  <h4>Change Task Status</h4>
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" id="main-content">
                  <label>Status</label><br>

                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-success">Change</button>
                </div>
              </div>
            </div>
          </div>

          <script>
            function mydate() {
              //alert("");
              document.getElementById("dt").hidden = false;
              document.getElementById("ndt").hidden = true;
            }
            function mydate1() {
              d = new Date(document.getElementById("dt").value);
              dt = d.getDate();
              mn = d.getMonth();
              mn++;
              yy = d.getFullYear();
              document.getElementById("ndt").value = dt + "/" + mn + "/" + yy
              document.getElementById("ndt").hidden = false;
              document.getElementById("dt").hidden = true;
            }
          </script>

          <script>
            $('#myModalchange').on('shown.bs.modal', function (e) {
              var i = $(e.relatedTarget).data('index');
              console.log(i);
              var col = $(e.relatedTarget).data('col');
              $.post(
                'http://127.0.0.1:9696/api/getTask',
                {
                  id: document.querySelector(`#${col}${i}`).value
                });

              /*  statuses = ; */
              let task = statuses[col][i];
              const select = document.createElement('select');

              const optionWorking = document.createElement('option');
              const optionPending = document.createElement('option');
              const optionDone = document.createElement('option');

              optionWorking.value = 'working';
              optionPending.value = 'pending';
              optionDone.value = 'done';

              optionWorking.innerText = 'Working';
              optionPending.innerText = 'Pending';
              optionDone.innerText = 'Done';
              if (task.status == 'working') {
                select.appendChild(optionPending);
                select.appendChild(optionDone);
              }
              if (task.status == 'pending') {
                select.appendChild(optionWorking);
                select.appendChild(optionDone);
              }
              if (task.status == 'done') {
                select.appendChild(optionWorking);
                select.appendChild(optionPending);
              }
              document.getElementById('main-content').appendChild(select);
            })
          </script>

