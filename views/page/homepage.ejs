<%- include('../includes/header.ejs') %>
<link href="/css/homepage.css" rel="stylesheet">
</head>

<body>
  <div class="all-page">

    <%- include('../includes/navbarandslidebar.ejs') %>


    <!-- body content -->
    <div class="body-content">
      <div class="menu-left">
        <div><button type="button" class="btn btn-light" id="button-left">Boards</button></div>
        <div><button type="submit" class="btn btn-light" id="button-left1">Template</button></div>
      </div>

      <div class="mid-content">
        <table border="0" style="width: 100%;font-weight: bold;text-align: center;color: black;">
          <h2 style="text-align: center;font-weight: bold;color: black;  text-shadow: 7px 4px 6px grey;">Project
            Infomation</h2>
          <thead>
            <th>Name Of Project</th>
            <th>Deadline</th>
            <th>Admin Project</th>
          </thead>
          <tbody>
            <% if(user.myProjects !== null) {
          user.myProjects.forEach( (project) =>{ %>
            <tr>
              <td> <a style="color: blue;" href="project/<%= project.projectName %>"><%= project.projectName %></a></td>
              <td></td>
              <td></td>
              <td>
                <form action="/api/projects/<%= project.projectName %>" method="POST"><button type="submit" class="alert-danger"><i class="fas fa-trash"></i></button>
                </form>
              </td>
            </tr>
              <% }) %> 
          </tbody>
        </table>
            <% } else { %>
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header1"><img src="img/work.png" style="width: 100%; height: 300px;"></div>
                  <div class="modal-body">
                    <p style="text-align: center;font-size: 24px;font-weight: bold;">Stay on track and up to date</p>
                    <p style="text-align: center;">Invite people to boards and cards, leave comments, add due dates, and
                      we'll
                      show the most important activity here.</p>
                  </div>
                </div>
              </div>
              <% } %>
      </div>

      <div class="menu-right">
        <div>
          <p> <i style='font-size:20px' class='far'>&#xf017;</i><b> Recently Viewed</b></p>
          <% user.myProjects.forEach( (project) =>{ %>
          <a style="color: black;" href="project/<%= project.projectName %>"><%= project.projectName %></a>
          <% }) %>
        </div>
        <hr>
        <div class="create-team"><b>Create a board</b><button type="button" class="btn btn-secondary"
            data-toggle="modal" data-target="#createProjectModal"><i style='font-size:16px'
              class='fas'>&#xf067;</i></button>
          <div class="modal fade" id="createProjectModal" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <form class="createProject">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create new Project</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <input type="text" name="projectName" class="form-control" placeholder="Name of project"
                      aria-describedby="basic-addon1">
                    <input type="text" name="description" class="form-control" placeholder="Description (Optional)"
                      aria-describedby="basic-addon1">
                    <input type="text" name="memberQuantity" class="form-control" placeholder="Amount of members"
                      aria-describedby="basic-addon1">
                    <div class="wrapper"></div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" data-dismiss='modal' class="btn btn-danger">Close</button>
                    <a><button type="submit" class="btn btn-primary">Add +</button></a>
                  </div>
              </div>
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>



  <%- include('../includes/scriptNavbar.ejs') %>
  <%- include('../includes/script.ejs') %>
  <%- include('../includes/footer.ejs') %>